@{
  ViewData["Title"] = "Basic Tables - Tables";
}

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Electricity and Solar Calculator</title>
  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <script>
    function calculateTotal() {
      var electricity1 = parseFloat(document.getElementById("electricity1").value) || 0;
      var electricity2 = parseFloat(document.getElementById("electricity2").value) || 0;
      var total = electricity1 + electricity2;
      document.getElementById("total").value = total;
    	
			var panelWatt = parseFloat(document.getElementById("panelWatt").value) || 0;
			var numberSolar = parseFloat(document.getElementById("numberSolar").value) || 0;

			var day = panelWatt * numberSolar * 3.6 / 1000;
			var month = panelWatt * numberSolar * 3.6 * 30 / 1000;
			var year = panelWatt * numberSolar * 3.6 * 365 / 1000;
			var savingsPerMonth =  (month / total) * 100;
			
			document.getElementById("day").value = day;
			document.getElementById("month").value = month;
			document.getElementById("year").value = year;
			document.getElementById("savings").value = savingsPerMonth;
		}

  </script>
</head>

<div class="container mt-5">
  <h1 class="mb-4">Electricity and Solar Data Input</h1>

  <!-- Electricity Section -->
  <div class="form-group row">
    <label for="electricity1" class="col-sm-4 col-form-label">Electricity Used in kWh (1):</label>
    <div class="col-sm-8">
      <input type="number" class="form-control" id="electricity1" placeholder="Enter kWh" oninput="calculateTotal()">
    </div>
  </div>
  <div class="form-group row">
    <label for="electricity2" class="col-sm-4 col-form-label">Electricity Used in kWh (2):</label>
    <div class="col-sm-8">
      <input type="number" class="form-control" id="electricity2" placeholder="Enter kWh" oninput="calculateTotal()">
    </div>
  </div>

  <!-- Total Calculation   -->
  <div class="form-group row">
    <label for="total" class="col-sm-4 col-form-label">Total Electricity Used (kWh):</label>
    <div class="col-sm-8">
      <input type="number" class="form-control" id="total" placeholder="Total kWh" readonly>
    </div>
  </div>

  <!-- Solar System Section -->
  <div class="form-group row">
    <label for="solarSystem" class="col-sm-4 col-form-label">Solar Generated System:</label>
    <div class="col-sm-4">
			<input type="number" class="form-control" id="panelWatt" placeholder="Solar panel watt" oninput="calculateTotal()">
    </div>
		<div class="col-sm-4">
			<input type="number" class="form-control" id="numberSolar" placeholder="Number of solar panels" oninput="calculateTotal()">
		</div>
		
  </div>

  <!-- Time Data Section -->
  <div class="form-group row">
    <label for="day" class="col-sm-4 col-form-label">Day Data:</label>
    <div class="col-sm-8">
			<input type="text" class="form-control" id="day" step="0.01" min="0" max="999999.99" placeholder="Enter day data" readonly>
    </div>
  </div>
  <div class="form-group row">
    <label for="month" class="col-sm-4 col-form-label">Month Data:</label>
    <div class="col-sm-8">
			<input type="text" class="form-control" id="month" step="0.01" min="0" max="999999.99"  placeholder="Enter month data" readonly>
    </div>
  </div>
  <div class="form-group row">
    <label for="year" class="col-sm-4 col-form-label">Year Data:</label>
    <div class="col-sm-8">
			<input type="text" class="form-control" id="year" step="0.01" min="0" max="999999.99"    placeholder="Enter year data" readonly>
    </div>
  </div>

  <!-- Savings Section -->
  <div class="form-group row">
    <label for="savings" class="col-sm-4 col-form-label">Savings from bill per month:</label>
    <div class="col-sm-8">
			<input type="text" class="form-control" id="savings" placeholder="Enter savings from bill" readonly>
    </div>
  </div>
</div>
