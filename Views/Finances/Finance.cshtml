<!-- JavaScript for adding rows and updating the week display -->
<script>
        document.addEventListener('DOMContentLoaded', (event) => {
            const weekDisplay = document.getElementById('week-display');
            const currentDate = new Date();
            const startOfWeek = new Date(currentDate.setDate(currentDate.getDate() - currentDate.getDay() + 1));
            const endOfWeek = new Date(currentDate.setDate(currentDate.getDate() - currentDate.getDay() + 7));

            const options = {
                month: 'short',
                day: 'numeric',
                year: 'numeric'
            };
            weekDisplay.innerText = `${startOfWeek.toLocaleDateString('en-US', options)} - ${endOfWeek.toLocaleDateString('en-US', options)}`;

            const addRowBtn = document.getElementById('add-row-btn');
            const financeTableBody = document.querySelector('#finance-table tbody');

            addRowBtn.addEventListener('click', () => {
                const rowCount = financeTableBody.rows.length + 1;

                // Create a new row
                const newRow = document.createElement('tr');
                newRow.innerHTML = `
                    <td>${rowCount}</td>
                    <td><input type="text" class="form-control"></td>
                    <td><input type="text" class="form-control"></td>
                    <td><input type="text" class="form-control"></td>
                    <td><input type="text" class="form-control"></td>
                    <td><input type="text" class="form-control"></td>
                    <td><input type="text" class="form-control"></td>
                    <td><input type="text" class="form-control"></td>
                    <td><input type="text" class="form-control"></td>
                    <td><input type="text" class="form-control"></td>
                    <td><input type="text" class="form-control"></td>
                    <td><input type="text" class="form-control"></td>
                    <td><input type="text" class="form-control"></td>
                    <td><input type="text" class="form-control"></td>
                    <td><input type="text" class="form-control"></td>
                `;

                // Append the new row to the table body
                financeTableBody.appendChild(newRow);
            });
        });
</script>
