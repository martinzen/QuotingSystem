<div class="container mt-5">
  <h2 class="mb-4">Stock</h2>
  <div class="row">
    <!-- Form Section (Left Column) -->
    <div class="col-md-7">
      <!-- Tabs -->
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
          <button class="nav-link active" id="panels-details-tab" data-bs-toggle="tab" data-bs-target="#panels-details" type="button" role="tab" aria-controls="panels-details" aria-selected="true">Panels</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="inverters-tab" data-bs-toggle="tab" data-bs-target="#inverters-details" type="button" role="tab" aria-controls="inverters-details" aria-selected="false">Inverters</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="batteries-details-tab" data-bs-toggle="tab" data-bs-target="#batteries-details" type="button" role="tab" aria-controls="batteries-details" aria-selected="false">Batteries</button>
        </li>
      </ul>

      <!-- Tab Content -->
      <div class="tab-content" id="myTabContent">
        <!-- Panels Details Tab -->
        <div class="tab-pane fade show active p-4" id="panels-details" role="tabpanel" aria-labelledby="panels-details-tab">
          <h4>Panels Details</h4>
          <form id="registrationForm">
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="companyNamePanels" class="form-label">Company Name</label>
                <input type="text" class="form-control" id="companyNamePanels" oninput="updatePreview()">
              </div>
              <div class="col-md-6">
                <label for="modelPanel" class="form-label">Panel Model</label>
                <input type="text" class="form-control" id="modelPanel" oninput="updatePreview()">
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="panelCapacity" class="form-label">Panel Capacity</label>
                <input type="text" class="form-control" id="panelCapacity" oninput="updatePreview()">
              </div>
              <div class="col-md-6">
                <label for="numberPanels" class="form-label">Number of panels</label>
                <input type="text" class="form-control" id="numberPanels" oninput="updatePreview()">
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="pricePanel" class="form-label">Price</label>
                <input type="text" class="form-control" id="pricePanel">
              </div>
              <div class="col-md-6">
                <label for="imagePanel" class="form-label">Image</label>
                <input type="file" class="form-control" id="imagePanel" oninput="updatePreview()">

              </div>
            </div>

          </form>
          <div class="mt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>

        <!-- Inverter Details Tab -->
        <div class="tab-pane fade p-4" id="inverters-details" role="tabpanel" aria-labelledby="inverters-tab">
          <h4>Inverters Details</h4>
          <form>
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="companyNameInverter" class="form-label">Company Name</label>
                <input type="text" class="form-control" id="companyNameInverter" oninput="updatePreview()">
              </div>
              <div class="col-md-6">
                <label for="modelInverter" class="form-label">Model</label>
                <input type="text" class="form-control" id="modelInverter" oninput="updatePreview()">
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="inverterCapacity" class="form-label">Inverter Capacity</label>
                <input type="text" class="form-control" id="inverterCapacity" oninput="updatePreview()">
              </div>
              <div class="col-md-6">
                <label for="inverterPhase" class="form-label">Phase type</label>
                <input type="text" class="form-control" id="inverterPhase" oninput="updatePreview()">
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-6">

                <label for="priceInverter" class="form-label">Price</label>
                <input type="text" class="form-control" id="priceInverter" oninput="updatePreview()">
              </div>
              <div class="col-md-6">
                <label for="numberInverters" class="form-label">Number of inverters</label>
                <input type="text" class="form-control" id="numberInverters" oninput="updatePreview()">
              </div>
            </div>

            <div class="row mb-3">

              <div class="col-md-6">
                <label for="imageInverter" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageInverter" oninput="updatePreview()">
              </div>
            </div>
          </form>
          <div class="mt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>

        <!-- Batteries Details Tab -->
        <div class="tab-pane fade p-4" id="batteries-details" role="tabpanel" aria-labelledby="batteries-details-tab">
          <h4>Batteries Details</h4>
          <form>
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="batteryNameInverter" class="form-label">Company Name</label>
                <input type="text" class="form-control" id="batteryNameInverter" oninput="updatePreview()">
              </div>
              <div class="col-md-6">
                <label for="batteryModel" class="form-label">Model</label>
                <input type="text" class="form-control" id="batteryModel" oninput="updatePreview()">
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-6">
                <label for="batteryCapacity" class="form-label">Battery Capacity</label>
                <input type="text" class="form-control" id="batteryCapacity" oninput="updatePreview()">
              </div>
              <div class="col-md-6">
                <label for="batteryPhase" class="form-label">Phase</label>
                <input type="text" class="form-control" id="batteryPhase" oninput="updatePreview()">
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="batteryPrice" class="form-label">Price</label>
                <input type="text" class="form-control" id="batteryPrice" oninput="updatePreview()">
              </div>
              <div class="col-md-6">
                <label for="numberBatteries" class="form-label">Number of Batteries</label>
                <input type="text" class="form-control" id="numberBatteries" oninput="updatePreview()">
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="batteryImage" class="form-label">Image</label>
                <input type="file" class="form-control" id="batteryImage" oninput="updatePreview()">
              </div>
            </div>

          </form>
          <div class="mt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Preview Section (Right Column) -->
    <div class="col-md-5">
      <div class="preview-container">
        <h4>Live Preview</h4>
        <hr>
        <div id="previewContent">
          <!-- Preview content will be loaded here -->
          <h6 class="text-center">Panels</h6>
          <p><strong>Company Name</strong> <span id="previewCompanyNamePanels"></span></p>
          <p><strong>Panel Model</strong> <span id="previewModelPanel"></span></p>
          <p><strong>Panel Capacity</strong> <span id="previewPanelCapacity"></span></p>
          <p><strong>Price each</strong> <span id="previewPricePanel"></span></p>
          <p><strong>Number of panels</strong> <span id="previewNumberPanels"></span></p>
          <hr>
          <h6 class="text-center">Inverter</h6>
          <p><strong>Company Name</strong> <span id="previewCompanyNameInverter"></span></p>
          <p><strong>Inverter Model</strong> <span id="previewModelInverter"></span></p>
          <p><strong>Inverter Capacity</strong> <span id="previewInverterCapacity"></span></p>
          <p><strong>Phase</strong> <span id="previewInverterPhase"></span></p>
          <p><strong>Price each</strong> <span id="previewPriceInverter"></span></p>
          <p><strong>Number of inverter</strong> <span id="previewNumberInverters"></span></p>
          <hr>
          <h6 class="text-center">Battery</h6>
          <p><strong>Company Name</strong> <span id="previewBatteryName"></span></p>
          <p><strong>Battery Model</strong> <span id="previewBatteryModel"></span></p>
          <p><strong>Battery Capacity</strong> <span id="previewBatteryCapacity"></span></p>
          <p><strong>Phase</strong> <span id="previewBatteryPhase"></span></p>
          <p><strong>Price each</strong> <span id="previewPriceBattery"></span></p>
          <p><strong>Number of Batteries</strong> <span id="previewAbnNum"></span></p>


        </div>
      </div>

    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script>
        // JavaScript to update the live preview as the user fills in the form
        function updatePreview() {

            document.getElementById('previewFirstName').textContent = document.getElementById('firstName').value;
            document.getElementById('previewLastName').textContent = document.getElementById('lastName').value;
            document.getElementById('previewMobile').textContent = document.getElementById('mobile').value;
            document.getElementById('previewEmail').textContent = document.getElementById('email').value;

            document.getElementById('previewPostAddress').textContent = document.getElementById('postAddress').value;
            document.getElementById('previewInstallationAddress').textContent = document.getElementById('installationAddress').value;
            document.getElementById('previewCompanyName').textContent = document.getElementById('companyName').value;
            document.getElementById('previewAbnNum').textContent = document.getElementById('abnNum').value;

            document.getElementById('previewMeterNumber').textContent = document.getElementById('meterNumber').value;
            document.getElementById('previewNmi').textContent = document.getElementById('nmi').value;
            document.getElementById('previewElectricityDis').textContent = document.getElementById('electricityDis').value;
            document.getElementById('previewelEctricityRetailer').textContent = document.getElementById('electricityRetailer').value;
            document.getElementById('previewPropertyPhase').textContent = document.getElementById('propertyPhase').value;
            document.getElementById('previewPreapprovalNumber').textContent = document.getElementById('preapprovalNumber').value;

            document.getElementById('previewStoryHouse').textContent = document.getElementById('storyHouse').value;
            document.getElementById('previewRoofType').textContent = document.getElementById('roofType').value;
            document.getElementById('previewNmiHouse').textContent = document.getElementById('nmiHouse').value;
            document.getElementById('previewMeterNumberHouse').textContent = document.getElementById('meterNumberHouse').value;
            document.getElementById('previewPhaseHouse').textContent = document.getElementById('phaseHouse').value;
            document.getElementById('previewSwitchBoardUpgrade').textContent = document.getElementById('boardUpgrade').value;
        }

