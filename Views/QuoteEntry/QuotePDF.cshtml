@model AspnetCoreMvcFull.Models.QuoteEntry

<h1>PDF Quote</h1>

@if (Model is null)
{

<p>No data available, there is no ID</p>

} else
{
	<section class="">

		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-6 vh-100 ">
					<form id="registrationForm" method="post">
						<h4>Personal Details</h4>
						<div class="row mb-3">
							<div class="col-md-6">
								<label for="firstName" class="form-label">First Name</label>
								<input type="text" asp-for="NameFirst" class="form-control" id="firstName" placeholder="Enter first name" oninput="updatePreview()">
							</div>
							<div class="col-md-6">
								<label for="lastName" class="form-label">Last Name</label>
								<input type="text" asp-for="NameLast" class="form-control" id="lastName" placeholder="Enter last name" oninput="updatePreview()">
							</div>
						</div>
						<div class="row mb-4">
							<div class="col-md-6">
								<label for="mobile" class="form-label">Mobile</label>
								<input type="text" asp-for="Mobile" class="form-control" id="mobile" placeholder="Enter mobile number" oninput="updatePreview()">
							</div>
							<div class="col-md-6">
								<label for="email" class="form-label">Email</label>
								<input type="email" asp-for="Email" class="form-control" id="email" placeholder="Enter email address" oninput="updatePreview()">
							</div>
						</div>
						<div class="row mb-3">
							<div class="col-md-12">
								<label for="postAddress" class="form-label">Postal Address</label>
								<input type="text" asp-for="postAddress" class="form-control text-center" id="postAddress" placeholder="Enter postal address">
							</div>
						</div>
						<div class="row mb-3">
							<div class="col-md-12">
								<label for="installationAddress" class="form-label">Installation Address</label>
								<input type="text" asp-for="installationAddress" class="form-control text-center" id="installationAddress" placeholder="Enter installation address" oninput="updatePreview()">
							</div>
						</div>
						<div class="row mb-3">
							<div class="col-md-6">
								<label for="companyName" class="form-label">Company Name</label>
								<input type="text" asp-for="companyName" class="form-control" id="companyName" placeholder="Enter company name" oninput="updatePreview()">
							</div>
							<div class="col-md-6">
								<label for="abnNum" class="form-label">ABN Number</label>
								<input type="text" asp-for="ABNnumber" class="form-control" id="abnNum" placeholder="Enter ABN number" oninput="updatePreview()">
							</div>
						</div>

						<h4>Electricity Bill Details</h4>

						<div class="row mb-3">
							<div class="col-md-6">
								<label for="meterNumber" class="form-label">Meter Number</label>
								<input type="text" asp-for="meterNumber" class="form-control" id="meterNumber" placeholder="Enter meter number" oninput="updatePreview()">
							</div>
							<div class="col-md-6">
								<label for="nmi" class="form-label">NMI</label>
								<input type="text" asp-for="NMI" class="form-control" id="nmi" placeholder="Enter NMI" oninput="updatePreview()">
							</div>
						</div>
						<div class="row mb-3">

							<div class="col-md-6">
								<label for="electricityDis" class="form-label">Electricity Distributor</label>
								<input type="text" asp-for="electricityDis" class="form-control" id="electricityDis" placeholder="Enter electricity distributor" oninput="updatePreview()">
							</div>

							<div class="col-md-6">
								<label for="electricityRetailer" class="form-label">Electricity Retailer</label>
								<input type="text" asp-for="electricityRetailer" class="form-control" id="electricityRetailer" placeholder="Enter electricity retailer" oninput="updatePreview()">
							</div>

						</div>
						<div class="row mb-4">

							<div class="col-md-2">
								<label for="propertyPhase" class="form-label">Property Phase</label>
								<input type="text" asp-for="propertyPhase" class="form-control" id="propertyPhase" placeholder="Enter property phase" oninput="updatePreview()">
							</div>
							
							<div class="col-md-6">
								<label for="preapprovalNumber" class="form-label">Preapproval Number</label>
								<input type="text" asp-for="preapprovalNumber" class="form-control" id="preapprovalNumber" placeholder="Enter preapproval number" oninput="updatePreview()">
							</div>
						</div>
						<br />
						
						<h4>Clients Bill</h4>

						<div class="row mb-3">

							<div class="col-md-6">
								<label for="meterNumber" class="form-label">Kwh</label>
								<input type="text" class="form-control" id="meterNumber" placeholder="Enter Kwh" oninput="updatePreview()">
							</div>

							<div class="col-md-6">
								<label for="nmi" class="form-label">Price</label>
								<input type="text" class="form-control" id="nmi" placeholder="Enter price" oninput="updatePreview()">
							</div>
						</div>
						
					</form>
				</div>
				<div class="col-lg-6 vh-100">

					<h4>House Details</h4>

					<div class="row mb-3">

						<div class="col-md-3">
							<label for="storyHouse" class="form-label">Story of House</label>
							<input type="text" asp-for="storyHouse" class="form-control" id="storyHouse" placeholder="Enter story of the house" oninput="updatePreview()">
						</div>

						<div class="col-md-3">
							<label for="roofType" class="form-label">Roof Type</label>
							<input type="text" asp-for="roofType" class="form-control" id="roofType" placeholder="Enter roof type" oninput="updatePreview()">
						</div>

						<div class="col-md-4">
							<label for="switchBoardUpgrade" class="form-label">Switch Board Upgrade</label>
							<input type="text" asp-for="switchBoardUpgrade" class="form-control" id="switchBoardUpgrade" placeholder="Enter switch board upgrade status" oninput="updatePreview()">
						</div>
					</div>

					<h4>Solar Panels</h4>

					<div class="row mb-3">

						<div class="col-md-6">
							<label for="firstName" class="form-label">Panel model:</label>
							<input type="text" asp-for="NameFirst" class="form-control" id="firstName" placeholder="Enter first name" oninput="updatePreview()">
						</div>

						<div class="col-md-6">
							<label for="lastName" class="form-label">Panel Number</label>
							<input type="text" asp-for="NameLast" class="form-control" id="lastName" placeholder="Enter last name" oninput="updatePreview()">
						</div>
				
					
						<div class="col-md-6">
							<label for="firstName" class="form-label">Panel Watt</label>
							<input type="text" asp-for="NameFirst" class="form-control" id="firstName" placeholder="Enter first name" oninput="updatePreview()">
						</div>

						<img class='col-md-3' src='https://www.austraenergy.com.au/wp-content/uploads/2024/02/Ai-LB-Pro-5K.fw_.png' alt=''>
					</div>


					<h4>Inverter System</h4>

					<!--Generated with a search or drop down-->
					<div class="row mb-3">
						<div class="col-md-6">
							<label for="firstName" class="form-label">Inverter model:</label>
							<input type="text" asp-for="NameFirst" class="form-control" id="firstName" placeholder="Enter first name" oninput="updatePreview()">
						</div>
						<div class="col-md-6">
							<label for="firstName" class="form-label">Inverter Number:</label>
							<input type="text" asp-for="NameFirst" class="form-control" id="firstName" placeholder="Enter first name" oninput="updatePreview()">
						</div>
						<div class="col-md-6">
							<label for="firstName" class="form-label">Inverter Size:</label>
							<input type="text" asp-for="NameFirst" class="form-control" id="firstName" placeholder="Enter first name" oninput="updatePreview()">
						</div>
						
						<img class='col-md-3' src='https://www.austraenergy.com.au/wp-content/uploads/2024/02/Ai-LB-Pro-5K.fw_.png' alt=''>
					</div>


					<div class="col-md-6">
					<h4>Mountings:</h4>
					
						<label for="firstName" class="form-label">Inverter Size:</label>
						<input type="text" asp-for="NameFirst" class="form-control" id="firstName" placeholder="Enter first name" oninput="updatePreview()">
					</div>
					
				</div>
			</div>
		</div>

		<br />
		<br />
		<br />
		<br />
		<br />
		<br />
		<br />
		<br />
		<br />
		<br />
		<br />
		<br />
	</section>
